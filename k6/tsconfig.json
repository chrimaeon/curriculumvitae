{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "target": "ES2017",
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ]
}
